<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

>
    <Button android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="二维码"
            android:id="@+id/btn_scan"/>
    <Button android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="拍照"
            app:layout_constraintTop_toBottomOf="@id/btn_scan"
            android:id="@+id/btn_camera"/>
    <Button android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="HandSign"
            app:layout_constraintTop_toBottomOf="@id/btn_camera"
            android:id="@+id/btn_hand_sign"
    />
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_player"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="PLAYER"
            app:layout_constraintTop_toBottomOf="@id/btn_hand_sign"
    />
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/iv_glid"
               android:paddingLeft="10dp"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@id/btn_player"
    />
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_enhance_tab"
            android:text="enhance_tab_test"
            app:layout_constraintTop_toBottomOf="@id/iv_glid"
    />
</android.support.constraint.ConstraintLayout>
